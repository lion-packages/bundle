{
    "name": "lion/bundle",
    "description": "lion-framework configuration and initialization package",
    "type": "library",
    "homepage": "https://lion-client.vercel.app/",
    "keywords": ["lion", "bundle", "lion-bundle"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/lion-packages/framework/issues",
        "source": "https://github.com/lion-packages/framework"
    },
    "autoload": {
        "psr-4": {
            "LionBundle\\": "src/LionBundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-filter": "*",
        "ext-hash": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-session": "*",
        "ext-tokenizer": "*",
        "cboden/ratchet": "^0.4.4",
        "lion/command": "^3.0",
        "lion/database": "^8.8",
        "lion/files": "^5.0",
        "lion/helpers": "^2.0",
        "lion/mailer": "^5.0",
        "lion/request": "^6.0",
        "lion/route": "^8.2",
        "lion/security": "^8.0",
        "monolog/monolog": "^3.3",
        "nesbot/carbon": "^2.66",
        "predis/predis": "^2.2",
        "symfony/console": "^6.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.20",
        "phpunit/phpunit": "^10.1"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php lion init-project"
        ]
    },
     "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
