{
    "name": "lion-framework/lion-framework",
    "description": "A simple and easy way to use lion-framework",
    "type": "project",
    "homepage": "https://github.com/Sleon4/Lion-Framework",
    "time": "2022-03-04",
    "keywords": ["lion", "framework", "lion-framework"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergio LeÃ³n",
            "email": "sergioleon4004@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "lion-framework/lion-command": "^2.2",
        "lion-framework/lion-files": "^4.6",
        "lion-framework/lion-mailer": "^3.2",
        "lion-framework/lion-route": "^6.2",
        "lion-framework/lion-security": "^6.5",
        "lion-framework/lion-sql": "^5.6",
        "nesbot/carbon": "^2.59"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
     "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
